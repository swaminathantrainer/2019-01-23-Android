<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/random_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000" />


    <EditText
        android:id="@+id/emailInput"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/emailErrorTextView"
        style="@style/InformationTextStyle.Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/passwordInput"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/passwordErrorTextView"
        style="@style/InformationTextStyle.Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Text Error" />

    <Button
        android:id="@+id/loginButton"
        style="@style/ThemeButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="LOGIN" />

    <!--<Button-->
    <!--android:id="@+id/signupButton"-->
    <!--style="@style/ThemeButtonStyle"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_marginTop="16dp"-->
    <!--android:text="SIGN UP" />-->

    <TextView
        android:id="@+id/signupTextView"
        style="@style/InformationTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Click here to signup" />


</LinearLayout>